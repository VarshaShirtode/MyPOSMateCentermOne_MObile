<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel_centrapay_merchant_qr_display"
        android:visibility="visible"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_centrapay_merchant_qr_display"
            android:src="@drawable/centerpay"
            android:layout_width="103dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rec_bg"
            android:padding="10dp"
            android:visibility="visible" />


        <ImageView
            android:src="@drawable/qr_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_centrapay_merchant_qr_disabled"
            android:layout_width="103dp"
            android:layout_height="70dp"
            android:background="@drawable/rec_gray_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:text="Centrapay Merchant QR disabled"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>

    <com.quagnitia.myposmate.utils.CurrencyEditText
        android:textSize="14sp"
        android:enabled="false"
        app:showSymbol="true"
        android:layout_height="18dp"
        android:id="@+id/edt_centerpay_mr_qr_cnv"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_conv"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/colorBlue"
        android:textStyle="bold" />

</LinearLayout>