<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="#90A4AE"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Info"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="Branch Info"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_branch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_merchant_name"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"

                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:minLines="2"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView

                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:text="Branch Address"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_branch_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_address"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"

                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:scrollHorizontally="false"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:text="Branch phone no"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_branch_contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_contact_no"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:text="Branch Email"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_branch_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_contact_email"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="GST No"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_gst_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_gst_number"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:minLines="2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="Terminal Identifier"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_terminal_identifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_terminal_identifier"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="Lane Identifier"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_lane_identifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_lane_identifier"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:minLines="2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="POS Identifier"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_pos_identifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <EditText
                    android:id="@+id/edt_pos_identifier"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:minLines="2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="TimeZone"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_timezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left" />

                <Spinner
                    android:id="@+id/sp_timezone"
                    style="@style/EditTextStyle"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:minLines="2"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnBg"
                    android:gravity="center"
                    android:text="@string/save_and_ok"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnBg"
                    android:gravity="center"
                    android:text="Cancel &amp; Close"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/activity_main"></TextView>
    </RelativeLayout>
</ScrollView>
