<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Adds Display"
        android:textColor="@color/colorHeader"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <CheckBox

            android:id="@+id/chk_display_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Display Adds"
            android:textSize="16sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_toLeftOf="@+id/edt_wait_time"
                android:text="Wait for " />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edt_wait_time"
                android:text="5"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edt_border" />

            <TextView
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/edt_wait_time"
                android:text=" seconds" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/colorHeader"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>