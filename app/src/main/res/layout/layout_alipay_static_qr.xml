<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="10dp"
    android:background="@drawable/blue_border"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_qrcode"
        android:layout_width="230dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:background="@drawable/alipay_qr"
        android:padding="10dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv1"
       android:layout_marginBottom="10dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_qrcode"
        android:gravity="center|left"
        android:singleLine="false"
        android:text="Scan to enjoy Alipay Global Travel Gift Pack.
Promotion only available to authenticated Alipay wallet users from Chinese mainland.
Please scan QR code for details."
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_centerInParent="true"
         />
    <Button
        android:id="@+id/btn_close"
        android:layout_width="150dp"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/colorBtnBg"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv1"
        android:text="@string/close"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />



</RelativeLayout>

    </ScrollView>


</LinearLayout>