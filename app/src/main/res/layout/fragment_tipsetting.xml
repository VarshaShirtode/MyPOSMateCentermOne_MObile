<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="Tipping Setup"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPopupBg"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <LinearLayout
            android:id="@+id/rel_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_switchTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Switch On Tip"
                android:textSize="15sp"
                android:textStyle="bold"
            android:layout_weight="60"
                />



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorBlack"></View>

        <LinearLayout
            android:id="@+id/rel_default1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_default1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Default Value 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_default1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"

                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="5.00"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_default1"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_default1"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rel_default2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_default2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Default Value 2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_default2"
                    android:layout_width="100dp"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="8.00"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_default2"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_default2"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rel_default3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_default3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Default Value 3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_default3"
                    android:layout_width="100dp"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="10.00"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_default3"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_default3"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rel_default4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_default4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Default Value 4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_default4"
                    android:layout_width="100dp"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="15.00"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_default4"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_default4"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rel_default5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_default5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Default Value 5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_default5"
                    android:layout_width="100dp"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="20.00"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_default5"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_default5"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <CheckBox
                android:id="@+id/chk_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:gravity="center|left"
                android:text="Custom Amount"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="60"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="40"
                android:visibility="gone"
                >

                <com.quagnitia.myposmate.utils.CurrencyEditText
                    android:id="@+id/edt_custom"
                    android:layout_width="100dp"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/chk_alipay_qr_scan"
                    android:background="@drawable/edt_border"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0.0"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_custom"
                    android:layout_width="wrap_content"
                     android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/edt_custom"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_save_and_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blue_border_btn"
                android:gravity="center"
                android:text="Save &amp; Ok"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btn_cancel_and_close"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/blue_border_btn"
                android:gravity="center"
                android:text="Cancel &amp; Close"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>