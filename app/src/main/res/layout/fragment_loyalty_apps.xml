<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorHeader"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_amount"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="@string/amount"
            android:textSize="15sp"
            android:textStyle="bold" />


        <com.quagnitia.myposmate.utils.CurrencyEditText
            android:id="@+id/edt_amount"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:maxLength="16"
            android:text="0.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:locale="en_US" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_amount"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ii">

            </ImageView>


            <ImageView

                android:id="@+id/img_three"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mopanion"
                android:padding="10dp">

            </ImageView>

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/entertainment"
                android:visibility="invisible">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_goody"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:padding="10dp"
                android:src="@drawable/goody">

            </ImageView>


            <ImageView
                android:id="@+id/img_smart_fuel"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:padding="10dp"
                android:src="@drawable/smart_fuel">

            </ImageView>

            <ImageView
                android:id="@+id/img_air_points"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:padding="10dp"
                android:src="@drawable/air_points">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_fly_buys"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:scaleType="fitXY"
                android:src="@drawable/fly_buys">

            </ImageView>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:padding="10dp"
                android:src="@drawable/smart_fuel"
                android:visibility="invisible">

            </ImageView>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edt_border_black"
                android:padding="10dp"
                android:src="@drawable/air_points"
                android:visibility="invisible">

            </ImageView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>