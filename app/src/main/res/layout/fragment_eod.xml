<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#90A4AE"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Day End Report"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Start Date Time" />

                <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/edt_start_datetime"
                        style="@style/TextViewStyle1"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.8"
                        android:inputType="text"
                        android:textSize="14sp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/edt_start_time"
                        style="@style/TextViewStyle1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1.2"
                        android:inputType="text"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:text="End Date Time" />
                <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/edt_end_datetime"
                        style="@style/TextViewStyle1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.8"
                        android:textSize="14sp" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/edt_end_time"
                        style="@style/TextViewStyle1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1.2"
                        android:inputType="text"

                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_settlement"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorBtnBg"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="Settlement"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_print"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorBtnBg"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="Print"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_apply_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorBtnBg"
                    android:gravity="center"
                    android:text="Apply Filter"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPopupBg"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:text="Field Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:text="Field Value"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@color/colorLine" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Payment Amount" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Payment Count" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"

                            android:text="Refund Amount" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Refund Count" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Total Transactions" />

                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Alipay Payment Amount" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Alipay Payment Count" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Alipay Refund Amount" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="Alipay Refund Count" />
                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="WeChat Payment Amount" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="WeChat Payment Count" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="WeChat Refund Amount" />

                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="WeChat Refund Count" />
                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            android:visibility="visible"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="UnionPay Payment Amount" />
                        <TextView
                            android:visibility="visible"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="UnionPay Payment Count" />
                        <TextView
                            android:visibility="visible"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="UnionPay Refund Amount" />
                        <TextView
                            android:visibility="visible"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="UnionPay Refund Count" />



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_payment_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/tv_payment_count"
                            android:text="0" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/tv_refunded_amount"
                            android:text="0.00" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/tv_refund_count"
                            android:text="0" />
                        <TextView
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"

                            android:id="@+id/tv_total_transactions"
                            android:text="0" />
                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            android:id="@+id/tv_ali_payment_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />

                        <TextView
                            android:id="@+id/tv_ali_payment_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:id="@+id/tv_ali_refund_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:id="@+id/tv_ali_refund_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            android:id="@+id/tv_we_payment_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:id="@+id/tv_we_payment_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:id="@+id/tv_we_refund_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:id="@+id/tv_we_refund_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"

                            android:textSize="14sp"
                            android:text="0.00" />
                        <View
                            android:layout_marginTop="10dp"
                            android:background="@color/colorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"></View>

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_union_payment_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_union_payment_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_union_refund_amount"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_union_refund_count"
                            style="@style/TextViewStyle"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="0.00" />





                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLine" />


            </LinearLayout>


            <TextView
                style="@style/TextViewStyle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:text="NOTE: Numbers shown are based on transactions recorded on terminal and its 100% accuracy is not guaranteed.Accuracy of can be confirmed on the payment providers web portal."

                ></TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>